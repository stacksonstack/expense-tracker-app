<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19888C"
    tools:context=".AboutActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:fontFamily="@font/trade_winds"
        android:gravity="center"
        android:text="@string/about_our_project"
        android:textColor="#232126"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="#7FB3AC"
        android:fontFamily="@font/basic"
        android:gravity="center"
        android:paddingLeft="50sp"
        android:paddingTop="30sp"
        android:paddingRight="50sp"
        android:paddingBottom="30sp"
        android:text="@string/our_project_is_used_to_manage_both_income_and_expenses_we_have_implemented_andrioid_features_such_as_listview_buttons_radiobuttons_and_radiogroup_we_also_have_multiple_activities_that_we_connected_together_using_intent"
        android:textColor="#232126"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="#7FB3AC"
        android:fontFamily="@font/basic"
        android:gravity="center"
        android:paddingLeft="50sp"
        android:paddingTop="30sp"
        android:paddingRight="50sp"
        android:paddingBottom="30sp"
        android:text="@string/created_by_anthony_jimenez_stacey_carrillo"
        android:textColor="#232126"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.022" />

</androidx.constraintlayout.widget.ConstraintLayout>